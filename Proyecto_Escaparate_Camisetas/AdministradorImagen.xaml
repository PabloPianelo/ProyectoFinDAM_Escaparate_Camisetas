        <RadioButton x:Name="rbAzul" Content="Azul" HorizontalAlignment="Left" Margin="186,246,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbNegro" Content="Negro" HorizontalAlignment="Left" Margin="186,268,0,0" VerticalAlignment="Top"/>
        <RadioButton x:Name="rbBlanco" Content="Blanco" HorizontalAlignment="Left" Margin="186,288,0,0" VerticalAlignment="Top"/>
        <Button Content="Selecionar imagen" HorizontalAlignment="Left" Margin="529,288,0,0" VerticalAlignment="Top" Width="136" Click="Button_Click"/>
